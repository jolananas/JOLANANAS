{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "app/src/components/*"
      ],
      "@/lib/*": [
        "app/src/lib/*"
      ],
      "@/hooks/*": [
        "app/src/hooks/*"
      ],
      "@/types/*": [
        "app/src/types/*"
      ],
      "@/services/*": [
        "./services/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/config/*": [
        "app/src/variables/*"
      ],
      "@/store/*": [
        "./store/*"
      ],
      "@/graphql/*": [
        "./graphql/*"
      ],
      "@/shared/*": [
        "../shared/*"
      ],
      "@/shared/types/*": [
        "../shared/types/*"
      ],
      "@/shared/utils/*": [
        "../shared/utils/*"
      ],
      "@/shared/graphql/*": [
        "../shared/graphql/*"
      ],
      "@/shared/constants/*": [
        "../shared/constants/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "composite": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../shared/**/*.ts",
    "../shared/**/*/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "out",
    "build",
    "coverage",
    "test-results",
    "playwright-report"
  ]
}
